{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Integrated Mod Manager (IMM)",
	"version": "2.2.0",
	"identifier": "jp.bhatt.wwmm",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"trayIcon": {
			"iconPath": "icons/imm.ico",
			"iconAsTemplate": false
		},
		"windows": [
			{
				"title": "Integrated Mod Manager",
				"resizable": true,
				"fullscreen": false,
				"decorations": false,
				"transparent": true,
				"minWidth": 1200,
				"minHeight": 720
			}
		],
		"security": {
			"csp": null,
			"assetProtocol": {
				"enable": true,
				"scope": ["**"]
			}
		},
		"withGlobalTauri": false
	},
	"bundle": {
		"createUpdaterArtifacts": true,
		"active": true,
		"targets": "nsis",
		"icon": ["icons/128x128.png", "icons/icon.icns", "icons/imm.ico"],
		"windows": {
			"nsis": {
				"installerIcon": "icons/imm.ico"
			}
		}
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVDNDVCOEZFQzIyMkJDMjkKUldRcHZDTEMvcmhGWEhGdWNGcFJzN1hYR05YVXZPMXlzcVc3b2xrMzA5M25SdTZkMldtOUFWbzcK",
			"endpoints": ["https://github.com/jpbhatt21/integrated-mod-manager/releases/latest/download/latest.json"],
			"windows": {
				"installMode": "passive"
			}
		},
		"deep-link": {
			"desktop": {
				"schemes": ["imm", "wwmm"]
			}
		}
	}
}
